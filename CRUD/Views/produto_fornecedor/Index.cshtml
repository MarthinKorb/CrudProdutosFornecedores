@model IEnumerable<CRUD.Models.produto_fornecedor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar Produto por Fornecedor</h2>

<p class="btn btn-default">
    @Html.ActionLink("Cadastrar produto por Fornecedor", "Create")
</p>
<br /><br />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fornecedor.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.produto.nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fornecedor.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.produto.nome)
        </td>
        <td>
            <p class="btn btn-default">@Html.ActionLink("Editar", "Edit", new { id = item.id })</p>
            <p class="btn btn-default">@Html.ActionLink("Detalhes", "Details", new { id = item.id })</p>
            <p class="btn btn-default">@Html.ActionLink("Deletar", "Delete", new { id = item.id })</p>
        </td>
    </tr>
}

</table>
