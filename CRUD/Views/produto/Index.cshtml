@model IEnumerable<CRUD.Models.produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produtos</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            <p class="btn btn-default">@Html.ActionLink("Editar", "Edit", new { id = item.id_produto })</p>
            <p class="btn btn-default">@Html.ActionLink("Detalhes", "Details", new { id = item.id_produto })</p>
            <p class="btn btn-default">@Html.ActionLink("Deletar", "Delete", new { id = item.id_produto })</p>            
        </td>
    </tr>
}

</table>

<p class="btn btn-default">@Html.ActionLink("Adicionar Produto", "Create")</p>
