    @model IEnumerable<CRUD.Models.produto>


@{
    ViewBag.Title = "DropDown";
}

<h2>Ver Produtos por Fornecedor</h2>

@using (Html.BeginForm("DropDown", "produto", FormMethod.Get))
{
<div>
    <div>
        @Html.DropDownList("id", ViewBag.minha_lista as SelectList, htmlAttributes: new { @class = "form-control" })
    </div> 
    <br />
    <hr />
    <input class="btn btn-default" type="submit" value="Procurar" />
    <br />
</div>
}

<table class="table table-striped table-hover" style="margin-top:20px;">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
        </tr>
    }

    </table>







